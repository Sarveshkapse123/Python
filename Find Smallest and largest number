largest = None
smallest = None
while True :
    slar = input('Enter a Number :')
    if slar == ('done') : break
    try :
        slar = float(slar)
        if largest is None or largest < slar :
            largest = slar
        if smallest is None or smallest > slar :
            smallest = slar
    except :
        print ('Enter a valid Number')
        continue
print('Largest Number is :' ,largest)
print('smallest Number is :' ,smallest)



largest = None
smallest = None
while True:
    num = input("Enter a number: ")
    if num == "done": break
    try:
        num = int(num)
        if largest is None or largest < num: largest = num
        if smallest is None or smallest > num: smallest = num
    except:
        print ("Invalid input")
        continue
print ("Maximum is",largest)
print ("Minimum is",smallest)
