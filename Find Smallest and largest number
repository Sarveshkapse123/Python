largest = None
smallest = None
while True :
    slar = input('Enter a Number :')
    if slar == ('done') : break
    try :
        slar = float(slar)
        if largest is None or largest < slar :
            largest = slar
        if smallest is None or smallest > slar :
            smallest = slar
    except :
        print ('Enter a valid Number')
        continue
print('Largest Number is :' ,largest)
print('smallest Number is :' ,smallest)



largest = None
smallest = None
while True:
    num = input("Enter a number: ")
    if num == "done": break
    try:
        num = int(num)
        if largest is None or largest < num: largest = num
        if smallest is None or smallest > num: smallest = num
    except:
        print ("Invalid input")
        continue
print ("Maximum is",largest)
print ("Minimum is",smallest)




#5.2 Write a program that repeatedly prompts a user for integer numbers until the user enters 'done'.
#Once 'done' is entered, print out the largest and smallest of the numbers.
#If the user enters anything other than a valid number catch it with a try/except
#and put out an appropriate message and ignore the number.
#Enter 7, 2, bob, 10, and 4 and match the output below.
#Invalid input
#Maximum is 10
#Minimum is 2
    #elif num != int or float : break
    #print("Enter number, not a word!")

largest = None
smallest = None
while True:
    num = input("Enter a number: ")
    if num == 'done' :
        break
    try:
        numint = int(num)
        if smallest is None :
            smallest = numint
        elif numint < smallest :
            smallest = numint
        if largest is None :
            largest = numint
        elif numint > largest :
            largest = numint
    except:
         print("Invalid input")
    continue
print("Maximum is", largest)
print("Minimum is", smallest)





